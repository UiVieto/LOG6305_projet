{
    "name": "server",
    "description": "Serveur du projet de base pour le cours de LOG2990",
    "version": "1.2.0",
    "private": true,
    "scripts": {
        "start": "nodemon",
        "build": "rimraf out && tsc --project tsconfig.app.json",
        "format": "prettier --config ../.prettierrc.yaml --write \"app/**/*\"",
        "lint": "eslint -c .eslintrc.json \"./app/**/*.ts\" --format stylish",
        "test": "cross-env TS_NODE_PROJECT='./tsconfig.spec.json' mocha --config=.mocharc.json --node-env=test",
        "coverage": "cross-env TS_NODE_PROJECT='./tsconfig.spec.json' nyc mocha --config=.mocharc.json --node-env=test --exit",
        "fuzz": "cross-env TS_NODE_PROJECT='./tsconfig.spec.json' mocha --config=.mocharc.fuzz.json --node-env=test"
    },
    "nyc": {
        "check-coverage": true,
        "branches": 80,
        "lines": 80,
        "functions": 80,
        "statements": 80,
        "per-file": true,
        "include": [
            "app/**/*.ts"
        ],
        "extension": [
            ".ts"
        ],
        "exclude": [
            "**/*.spec.ts",
            "app/index.ts",
            "app/server.ts",
            "app/app.ts"
        ],
        "require": [
            "ts-node/register",
            "tsconfig-paths/register"
        ],
        "reporter": [
            "html",
            "text",
            "cobertura"
        ],
        "all": true,
        "cache": true,
        "sourceMap": true,
        "instrument": true
    },
    "_moduleAliases": {
        "@app": "out/server/app",
        "@common": "out/common"
    },
    "dependencies": {
        "cookie-parser": "1.4.5",
        "cors": "2.8.5",
        "debug": "4.3.4",
        "express": "4.18.1",
        "fast-fuzz-shim": "^1.0.5",
        "http-status-codes": "2.1.4",
        "jimp": "^0.22.4",
        "module-alias": "2.2.2",
        "mongodb": "4.5.0",
        "mongodb-memory-server": "^8.12.1",
        "prettier": "^3.0.0",
        "serve-favicon": "2.5.0",
        "socket.io": "^4.6.1",
        "socket.io-client": "^4.6.1",
        "swagger-jsdoc": "6.2.5",
        "swagger-ui-express": "4.5.0",
        "typedi": "0.10.0"
    },
    "devDependencies": {
        "@stryker-mutator/mocha-runner": "^8.7.1",
        "@types/body-parser": "1.19.5",
        "@types/chai": "^5.0.1",
        "@types/cookie-parser": "1.4.8",
        "@types/cors": "2.8.17",
        "@types/express": "5.0.0",
        "@types/jimp": "^0.2.28",
        "@types/mocha": "^10.0.10",
        "@types/node": "22.13.4",
        "@types/node-uuid": "0.0.32",
        "@types/sinon": "17.0.3",
        "@types/supertest": "6.0.2",
        "@types/swagger-jsdoc": "6.0.4",
        "@types/swagger-ui-express": "4.1.7",
        "@typescript-eslint/eslint-plugin": "8.24.1",
        "@typescript-eslint/parser": "8.24.1",
        "chai": "^5.2.0",
        "cross-env": "7.0.3",
        "eslint": "^8.0.0",
        "eslint-config-prettier": "10.0.1",
        "eslint-import-resolver-typescript": "3.8.2",
        "eslint-plugin-deprecation": "3.0.0",
        "eslint-plugin-import": "2.31.0",
        "eslint-plugin-jsdoc": "50.6.3",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "eslint-plugin-prettier": "5.2.3",
        "eslint-plugin-unicorn": "54.0.0",
        "fast-fuzz": "^5.1.6",
        "mocha": "^11.1.0",
        "nodemon": "^3.1.9",
        "nyc": "17.1.0",
        "reflect-metadata": "^0.2.2",
        "rimraf": "6.0.1",
        "sinon": "^19.0.2",
        "source-map-support": "0.5.21",
        "supertest": "7.0.0",
        "ts-node": "10.9.2",
        "tsconfig-paths": "4.2.0",
        "typescript": "5.7.3"
    }
}
